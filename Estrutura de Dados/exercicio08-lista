#include<stdio.h>
#include<stdlib.h>

typedef struct{
    char nome[50];
    int idade;
    float salario;
} dadosFuncionario;

int main(){
    int n;
    float mediaSalarial, somaSalarial;
    somaSalarial = 0;
    dadosFuncionario vet[n];
    
    printf("Quantos funcionários existem na sua empresa?: ");
    scanf("%d", &n);
    
    for(int i=0; i<=n; i++){
        printf("\nDigite o nome do %d funcionário: ", i+1);
        getchar();
        fgets(vet[i].nome, sizeof(vet[i].nome), stdin);

        printf("\nDigite a idade do %d funcionário: ", i+1);
        scanf("%d", &vet[i].idade);
        
        printf("\nDigite o salário do %d funcionário: ", i+1);
        scanf("%f", &vet.salario);
    }
    
    for(int i=0; i<=n; i++){
        printf("\n---Informações funcionários---");
        printf("\nNome: ", vet[i].nome);
        printf("\nIdade: ", vet[i].idade);
        printf("\nSalário: ", vet[i].salario);
        printf("\n\n");
    }

    for(int i=0; i<=n; i++){
        somaSalarial += dadosFuncionario[i].salario;
        mediaSalarial = somaSalarial/n;
    }
    
    printf("A média salarial da equipe é: %f", mediaSalarial);

    return 0;
}
